{% extends "base.html.twig" %}

{% block title %}Modification du profile utilisateur{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Modification du profil</h1>
    
        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Informations général</h2>
                    <hr>
                    {{ form_row(form.firstName)}}
                    {{ form_row(form.lastName)}}
                    {{ form_row(form.email)}}
                    {{ form_row(form.picture)}}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Détails</h2>
                    <hr>
                    {{ form_row(form.introduction)}}
                    {{ form_row(form.description)}}

                    <hr>
                    <p>Si vous avez fini vos modifications vous pouvez les enregistrer</p>

                    <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Enregistrer les Modifications
                    </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        
    </div>    

{% endblock %}